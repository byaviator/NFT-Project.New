@model CollectionModelUpdateVM
<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Basic Form</h6>
    <form asp-action="Update" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">
                We'll never share your email with anyone else.
            </div>
        </div>
        <div class="mb-3">s
            <label for="exampleInputPassword1" class="form-label">Category</label>
            <input asp-for="Category" class="form-control">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Image</label>
            <input asp-for="Image" type="file" class="form-control">
        </div>
        <div class="mb-3 form-check">
            <label class="form-check-label" for="exampleCheck1">ItemsInCollection</label>
            <input asp-for="ItemsInCollection" class="form-check-input" />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>